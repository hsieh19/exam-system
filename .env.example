# 考试系统环境变量配置
# 复制此文件为 .env 并填入实际值

# 当前激活的数据库类型: sqlite | mysql | postgres
DB_TYPE=sqlite

# ==================== MySQL 配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=exam_system

# ==================== PostgreSQL 配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DATABASE=exam_system

# ==================== 数据库高级配置 ====================
# 连接池大小 (建议: 开发环境 10, 生产环境 1000人并发建议 100+)
DB_CONNECTION_LIMIT=10

# ==================== Redis & Session 配置 ====================
# 是否启用 Redis (生产环境建议 true 以支持 PM2 多进程集群)
USE_REDIS=false
# Redis 连接地址
REDIS_URL=redis://localhost:6379

# ==================== 服务器配置 ====================
PORT=3000
# 运行环境: development | production
NODE_ENV=development
# 绑定地址: 0.0.0.0 = 所有网络接口(外部可访问), 127.0.0.1 = 仅本地
HOST=0.0.0.0

# ==================== 安全配置 ====================
# 用于加密敏感数据的密钥（生产环境请修改为随机字符串）
ENCRYPTION_SECRET=change-this-in-production-to-random-string

# ==================== 初始化配置 ====================
# 初始管理员账号（仅在数据库初始化且无管理员时使用）
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=admin123

# 飞书配置 (Feishu/Lark Configuration)
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_REDIRECT_URI=http://localhost:3000/index.html

# 考试系统环境变量配置
# 复制此文件为 .env 并填入实际值

# 当前激活的数据库类型: sqlite | mysql | postgres
DB_TYPE=sqlite

# ==================== MySQL 配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=exam_system

# ==================== PostgreSQL 配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DATABASE=exam_system

# ==================== 服务器配置 ====================
PORT=3000

# ==================== 安全配置 ====================
# 用于加密敏感数据的密钥（生产环境请修改为随机字符串）
ENCRYPTION_SECRET=change-this-in-production-to-random-string
